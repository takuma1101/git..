<h4>商品一覧</h4>

<div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>

<table class="table table-hover table-inverse">
  <thead>
    <tr>

      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item), class:"font-weight-bold" %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_active == true%>
        <td>販売中</td>
        <% else %>
        <td>販売停止中</td>
        <% end %>
      </tr>
      <% end %>
      </tbody>
  </table>

