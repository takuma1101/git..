<h4>商品新規登録</h4>

<%= form_with model: @item, url: admin_items_path do |f| %>
<div class="field">
<%= f.label :商品画像%>
<%= f.file_field :image, accept: "image/*"  %>
 </div>

<div class="field">
 <%= f.label :商品名 %>
 <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
 </div>

<div class="field">
 <%= f.label :商品説明%>
<%= f.text_area :introduction %>
 </div>

 <div class="field">
  <h6><%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></h6>

 </div>

  <div class="field">
  <h6><%= f.label :税抜き価格%>
  <%= f.text_field :price%>円</h6>
  </div>

  <div class="field">
  <%=f.label :販売ステータス%>
  <%= f.radio_button :is_active, true%>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中" %>
  </div>


<%= f.submit "新規登録"%>

 <%end%>
