<h4>商品詳細</h4>
<div class="col-xs-4">
<% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
</div>
 <table>
  <tbody>
    <tr></tr>
  <tr>
	  <th>商品名</th>
	  <th><%= @item.name%></th>
  </tr>
  <tr>
	  <th>商品説明</th>
	  <th><%= @item.introduction %></th>
  </tr>
  <tr>
	  <th>ジャンル</th>
	  <th><%= @item.genre.name %></th>
  </tr>
   <tr>
	  <th>税込価格<br>(税抜価格)</th>
	  <th><%= @item.with_tax_price%>(<%= @item.price%>)円</th>
  </tr>
  <tr>
  <% if @item.is_active == true%>
        <th>販売中</th>
        <% else %>
        <th>販売停止中</th>
        <% end %>
      </tr>
  <tr>
	  <th><%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success"%></th>
  </tr>



</tbody>
</table>

