<h4>会員一覧</h4>

<table class="table table-hover table-inverse">
  <thead>
    <tr>

      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"font-weight-bold" %></u></td>
        <td><%= customer.email%></td>
        <% if customer.is_active == true%>
        <td>有効</td>
        <% else %>
        <td>退会</td>
        <% end %>
      </tr>
      <% end %>
      </tbody>
  </table>


