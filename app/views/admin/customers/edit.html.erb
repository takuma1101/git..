<h4><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</h4>


<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
<table>
  <tbody>
    <tr></tr>
  <tr>
	  <th>会員ID</th>
	  <th><%= @custmer.id%></th>
  </tr>
  </tbody>
</table>
<div class="field">
        <%= f.label :氏名 ,class: "col-xs-3"%>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div><br>

<div class="field">
        <%= f.label :フリガナ,class: "col-xs-3" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div><br>

<div class="field">
        <%= f.label :郵便番号 ,class: "col-xs-3"%>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%>
      </div><br>

<div class="field">
        <%= f.label :住所 ,class: "col-xs-3"%>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" ,size: "50"%>
      </div><br>

<div class="field">
        <%= f.label :電話番号 ,class: "col-xs-3"%>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number"%>
      </div><br>

<div class="field">
        <%= f.label :メールアドレス ,class: "col-xs-3"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div><br>
 <div class="field">
        <%=f.label :会員ステータス%>
        <%= f.radio_button :is_active, true%>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "退会" %>
      </div><br>


<%= f.submit "変更を保存"%>

 <%end%>
