<h2><i class="fas fa-user-edit"></i>登録情報編集</h2><br>

    <%= form_with model: @customer, url: public_customer_path do |f| %>
      <div class="row user_edit">
        <div class="field">
        <%= f.label :名前,class: "col-xs-3" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
        </div>

        <div class="field">
        <%= f.label :フリガナ,class: "col-xs-3" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
        </div>

       <div class="field">
        <%= f.label :郵便番号（ハイフンなし） ,class: "col-xs-3"%>
        <%= f.text_field :postal_code %>
       </div><br>

       <div class="field">
        <%= f.label :住所 ,class: "col-xs-3"%>
        <%= f.text_field :address%>
       </div><br>

       <div class="field">
        <%= f.label :電話番号（ハイフンなし） ,class: "col-xs-3"%>
        <%= f.text_field :telephone_number %>
       </div><br>

       <div class="field">
        <%= f.label :メールアドレス ,class: "col-xs-3"%>
        <%= f.email_field :email%>
       </div><br>

       <div class="form-group">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
       </div>

       <div class="form-group">
       <%= link_to "退会する",  public_unsubscribe_path, method: :get, class:"btn btn-primary" %>
       </div>

      <%end%>

     </div>