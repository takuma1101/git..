  <h4>配送先登録／一覧</h4>

  <%= form_with model: @address, url: public_addresses_path, local: true do |f|%>
    <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code, placeholder:"0000000", id: "customer_postal_code" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, placeholder:"住所を入力してください", :size => "50", id: "customer_address" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name, placeholder:"名前を入力してください"%></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
  <%end%>

  <div class="row shipping-lists">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.pastal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_addresspath(address), class:"btn btn-success" %> <%= link_to "削除する", public_addresses_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>